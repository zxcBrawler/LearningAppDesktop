<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:LearningApp.ViewModels"
        mc:Ignorable="d"
        Width="800"
        Height="450"
        WindowState="Normal"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        CanResize="False"
        x:DataType="viewModels:ChangePasswordViewModel"
        x:Class="LearningApp.Views.ChangePasswordView"
        Title="ChangePasswordView">
    <StackPanel Margin="15" Spacing="20" VerticalAlignment="Top">
        <Button
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Classes="icon"
            ToolTip.Tip="Change password"
            Click="Button_OnClick"
            Background="Transparent"
            BorderThickness="0">
            <Svg
                Classes="passwordIcon"
                Path="/Assets/Icons/x.svg" />
        </Button>
        <Label Content="Old password" FontSize="20" />
        <TextBox FontSize="20" Watermark="Old Password" Text="{Binding OldPassword}" />
        <Label Content="New Password" FontSize="20" />
        <TextBox FontSize="20" Watermark="New Password" Text="{Binding NewPassword}" />
        <Button Classes="primary" Content="Change profile data" HorizontalAlignment="Stretch"
                Command="{Binding UpdatePasswordCommand}"
                HorizontalContentAlignment="Center" />
    </StackPanel>
</Window>