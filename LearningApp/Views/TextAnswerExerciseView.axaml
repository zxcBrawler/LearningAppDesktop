<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="LearningApp.Views.TextAnswerExerciseView"
             xmlns:viewModels="clr-namespace:LearningApp.ViewModels"
             x:DataType="viewModels:ExerciseViewModel">


    <StackPanel>
        <TextBlock Text="{Binding CurrentExercise.QuestionName}" FontSize="16" Margin="10" />
        <TextBlock Text="{Binding CurrentExercise.QuestionText}" FontSize="16" Margin="10" />
        <TextBox Text="{Binding UserTextAnswer, Mode=TwoWay}" Margin="10" Width="300" />
        <Button Classes="primary" HorizontalAlignment="Stretch" Content="Submit"
                Command="{Binding SubmitAnswerCommand}" Margin="10" />
    </StackPanel>
</UserControl>